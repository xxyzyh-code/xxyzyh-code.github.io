{
  "rewrites": [
    { 
      "source": "/api/stats", 
      "destination": "/functions/stats.js" 
    },
    { 
      "source": "/api/stats/", 
      "destination": "/functions/stats.js" 
    },
    { 
      "source": "/api/track", 
      "destination": "/functions/track.js" 
    },
    { 
      "source": "/api/track/", 
      "destination": "/functions/track.js" 
    }
  ],
  "headers": [
    {
      "source": "/(.*)\\.html",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=600" }
      ]
    },
    {
      "source": "/(.*)\\.(css|js)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400" }
      ]
    },
    {
      "source": "/(.*)\\.(png|jpg|jpeg|gif|svg|webp|ico|json|xml|txt)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.(mp3|m4a|wav|ogg)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/favicon.ico",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
