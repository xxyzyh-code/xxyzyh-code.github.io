{
  "functions": {
    "functions/**/*.js": { 
      // 修正運行時語法：從 "node@20" 改為 "nodejs20.x"
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { 
      "source": "/api/stats", 
      "destination": "/functions/stats.js" 
    },
    { 
      "source": "/api/stats/", 
      "destination": "/functions/stats.js" 
    },
    { 
      "source": "/api/track", 
      "destination": "/functions/track.js" 
    },
    { 
      "source": "/api/track/", 
      "destination": "/functions/track.js" 
    }
  ]
}
