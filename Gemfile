# Gemfile

source "https://rubygems.org"

# -------------------------------------------------------------------
# 📦 核心依赖：Jekyll 主体与 Liquid 模板引擎
# -------------------------------------------------------------------
gem "jekyll", "~> 4.3"
gem "liquid", "~> 4.0"

# -------------------------------------------------------------------
# 🎨 主题与相关插件
# -------------------------------------------------------------------
# Minimal Mistakes 使用远程主题加载方式
gem "minimal-mistakes-jekyll" # ✅ 建议显式声明，Actions 能正确识别主题
gem "jekyll-remote-theme"

# -------------------------------------------------------------------
# ⚙️ Jekyll 插件区（与 _config.yml 保持一致）
# -------------------------------------------------------------------
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-archives"
  gem "jekyll-include-cache"  # ✅ 解决 Unknown tag 'include_cached'
end

# -------------------------------------------------------------------
# 🧰 构建与运行支持
# -------------------------------------------------------------------
gem "bundler", "~> 2.0"
gem "webrick"  # ✅ 为本地 serve 提供 HTTP 支持（Ruby 3.x 默认不含）

# -------------------------------------------------------------------
# 🚀 部署兼容说明
# -------------------------------------------------------------------
# GitHub Actions 会自动运行 `bundle install`，无需手动执行。
# 确保 _config.yml 与此文件中的插件列表一致。
